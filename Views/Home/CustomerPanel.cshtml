@model IEnumerable<Power_Billing_Portal.Models.Bill>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bills</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/3da5cff3a5.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">

</head>
<body>
    <hr class="mt-3" />
    <h1 class="text-center letter-space">IKUPAY!</h1>
    <h1 class="text-center letter-space">CUSTOMER PANEL</h1>
    <p class="text-center">View and pay your bills from this panel.</p>
    <hr />
    <div class="container content">
    

        @foreach (var item in Model)
        {
            <div class="card d-inline-block m-3" style="width: 18rem; top:-120px; border:2px solid black;">
                <div class="card-body">
                    <h3 class="card-title text-center">@Html.DisplayFor(modelItem => item.CompanyName)</h3>
                    <hr />
                    <p class="card-text w-auto text-start">
                        If you have paid your bill via @Html.DisplayFor(modelItem => item.CompanyName)'s  own payment methods, ignore this payment.
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Bill ID: @Html.DisplayFor(modelItem => item.BillID)</li>
                    <li class="list-group-item">Billing Date: @Html.DisplayFor(modelItem => item.Date)</li>
                    <li class="list-group-item">Price: @Html.DisplayFor(modelItem => item.Price)₺</li>
                    <li class="list-group-item">Last Payment Date : @Html.DisplayFor(modelItem => item.LastDate)</li>
                </ul>
                <div class="card-body text-center">
                    @Html.ActionLink("PAY", "Pay", new { deletedbill = item.BillID }, new { @class = "text-center fs-2", target = "_blank" })
                </div>
            </div>

        }

    </div>
</body>
</html>
