@model Power_Billing_Portal.Models.Contact
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CONTACT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/3da5cff3a5.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-light flex-wrap fixed-top">
        <a class="navbar-brand ms-5 me-5 fs-1 letter-space text-white" href="/Home/Index">IKUPAY!</a>
        <button class="navbar-toggler text-dark border-white bg-white ps-4 pe-4 pt-2 pb-2" type="button" data-bs-toggle="collapse" data-bs-target="#ResponsiveNavContent" aria-controls="ResponsiveNavContent" aria-expanded="false" aria-label="Toggle navigation">
            MENU
        </button>
        <div class="collapse navbar-collapse" id="ResponsiveNavContent">
            <ul class="navbar-nav">
                <li class="nav-item active"> @Html.ActionLink("HOME", "Index", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
                <li class="nav-item active"> @Html.ActionLink("INFORMATION", "Info", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
                <li class="nav-item active"> @Html.ActionLink("CONTACT", "Contact", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
            </ul>

            <ul class="navbar-nav ms-auto ms-lg-auto me-0 me-md-2 me-lg-5">
                @Html.ActionLink("LOG IN", "Login", "Home", new { @class = "btn btn-light ps-4 pe-4 fs-4 " })

            </ul>
        </div>
    </nav>


    <div class="container content">

        @using (Html.BeginForm("ContactButton", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <h2 class="text-center fw-bolder">CONTACT US</h2>
            <div class="mb-5">
                <label for="name" class="form-label">Name</label>
                @Html.TextBoxFor(model => Model.Name, new { @class = "form-control w-100 mb-4", @id = "name", type = "text", required = "required" })
            </div>
            <div class="mb-5">
                <label for="mail" class="form-label">Mail</label>
                @Html.TextBoxFor(model => Model.Email, new { @class = "form-control w-100 mb-4", @id = "mail", type = "email", required = "required" })
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-5">
                <label for="gsm" class="form-label">Phone Number</label>
                @Html.TextBoxFor(model => Model.Gsm, new { @class = "form-control w-100 mb-4", @id = "gsm", required = "required" })
                <div id="" class="form-text">We'll never share your phone number with anyone else.</div>
            </div>
            <div class="mb-5">
                <label for="subject" class="form-label">Subject</label>
                @Html.TextBoxFor(model => Model.Subject, new { @class = "form-control w-100 mb-4", @id = "subject", required = "required" })
            </div>
            <div class="mb-5">
                <label for="message" class="form-label">Message</label>
                @Html.TextAreaFor(model => Model.Message, new { @class = "form-control w-100 mb-4", @id = "message", required = "required", cols = "30", rows = "10" })
            </div>

            <div class="mb-5 form-check">
                <!--Html.RadioButtonFor-->
                <input type="radio" class="form-check-input" id="responsemail" name="response">
                <label class="form-check-label" for="responsemail">Response me via email</label>
                <br>
                <input type="radio" class="form-check-input" id="responsetel" name="response">
                <label class="form-check-label" for="responsetel">Response me via phone</label>
                <br>
                <input type="radio" class="form-check-input" id="responseboth" name="response">
                <label class="form-check-label" for="responseboth">Response me via both</label>
            </div>

            <button type="submit" class="btn btn-primary" id="submit">Submit</button>

        }
    </div>
    <br>

    <footer>
        <p class="fw-lighter text-center text-white fs-6 pt-1">© 2021 IKUPAY! All Rights Reserved</p>
    </footer>
</body>
</html>