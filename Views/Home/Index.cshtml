@model Power_Billing_Portal.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/3da5cff3a5.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light flex-wrap fixed-top">
        <a class="navbar-brand ms-5 me-5 fs-1 letter-space text-white" href="/Home/Index">IKUPAY!</a>
        <button class="navbar-toggler text-dark border-white bg-white ps-4 pe-4 pt-2 pb-2" type="button" data-bs-toggle="collapse" data-bs-target="#ResponsiveNavContent" aria-controls="ResponsiveNavContent" aria-expanded="false" aria-label="Toggle navigation">
            MENU
        </button>
        <div class="collapse navbar-collapse" id="ResponsiveNavContent">
            <ul class="navbar-nav">
                <li class="nav-item active"> @Html.ActionLink("HOME", "Index", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
                <li class="nav-item active"> @Html.ActionLink("INFORMATION", "Info", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
                <li class="nav-item active"> @Html.ActionLink("CONTACT", "Contact", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
            </ul>

            <ul class="navbar-nav ms-auto ms-lg-auto me-0 me-md-2 me-lg-5">
                @Html.ActionLink("LOG IN", "Login", "Home", new { @class = "btn btn-light ps-4 pe-4 fs-4 " })

            </ul>
        </div>
    </nav>
  
    <div class="container content">

        <div id="slider" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#slider" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#slider" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#slider" data-bs-slide-to="2"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item">
                    <img src="~/Content/slider1.jpg" alt="onlinebill" class="d-block w-100" style="height: 500px;" draggable="false">
                </div>
                <div class="carousel-item active">
                    <img src="~/Content/slider2.jpg" alt="payonline" class="d-block w-100" style="height: 500px;" draggable="false">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/slider3.jpg" alt="billing" class="d-block w-100" style="height: 500px;" draggable="false">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#slider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#slider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <br>
        <br />
        <hr>
        <div class="row ">
            <div class="col-12 col-md-6 col-lg-4 w-auto mt-2 mt-lg-5 mt-md-4 mt-sm-3">
                @using (Html.BeginForm("LoginButton", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <h3 class="text-start mb-4 fw-bolder">Log in to view and pay your bills online</h3>
                    <div class="mb-3 mt-4">
                        <label for="IndexEmail" class="form-label">Email address</label>                       
                       @Html.TextBoxFor(model => Model.Email, new { @class = "form-control w-50", @placeholder = "Email" , @id = "IndexEmail" , required = "required" , type = "email" })
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="IndexPassword" class="form-label">Password</label>
                      @Html.PasswordFor(model => Model.Password, new { @class = "form-control w-50", @placeholder = "Password" , @id = "IndexPassword" , required = "required" , type = "password" })
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="Check">
                        <label class="form-check-label" for="Check">Check me out</label>
                    </div>
                    <button type="submit" class="btn pt-3 pb-3 ps-5 pe-5 me-2" id="submitButton">Log in</button>
                    <p class="d-inline-block ms-5"> <a href="/Home/Register">Register </a>to create new account </p>
                }
                </div>


            <div class="col-12 col-md-6 col-lg-4 grid-item w-50 mt-2 mt-lg-5 mt-md-4 mt-sm-3 h-auto text-center">
                <h1 id="why">USE IKUPAY! </h1>
                <ul class="ms-4 mt-4" id="whylist">
                    <li class="mb-5">
                        <i class="fas fa-clock fs-1 mt-4"></i> <h3 class="d-inline ms-3 ">Save Your Time</h3>
                    </li>
                    <li class="mb-5">
                        <i class="fab fa-pagelines fs-1"></i> <h3 class="d-inline ms-4"> Protect Nature</h3>
                    </li>
                    <li class="mb-5">
                        <i class="fas fa-money-bill-wave-alt fs-2"></i> <h3 class="d-inline ms-3">%0.99 Commission</h3>
                    </li>
                    <li>
                        <i class="fas fa-funnel-dollar fs-2"></i> <h3 class="d-inline ms-4">Different Payment Methods</h3>
                    </li>
                </ul>
            </div>
        </div>
        <hr>
    </div>
</body>
<footer>
    <p class="fw-lighter text-center text-white fs-6 pt-1">©  @DateTime.Now.Year IKUPAY! All Rights Reserved</p>
</footer>
</html>