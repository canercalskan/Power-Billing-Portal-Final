@model Power_Billing_Portal.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/3da5cff3a5.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
</head>

<nav class="navbar navbar-expand-md navbar-light flex-wrap fixed-top">
    <a class="navbar-brand ms-5 me-5 fs-1 letter-space text-white" href="/Home/Index">IKUPAY!</a>
    <button class="navbar-toggler text-dark border-white bg-white ps-4 pe-4 pt-2 pb-2" type="button" data-bs-toggle="collapse" data-bs-target="#ResponsiveNavContent" aria-controls="ResponsiveNavContent" aria-expanded="false" aria-label="Toggle navigation">
        MENU
    </button>
    <div class="collapse navbar-collapse" id="ResponsiveNavContent">
        <ul class="navbar-nav">
            <li class="nav-item active"> @Html.ActionLink("HOME", "Index", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
            <li class="nav-item active"> @Html.ActionLink("INFORMATION", "Info", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
            <li class="nav-item active"> @Html.ActionLink("CONTACT", "Contact", "Home", new { @class = "nav-link ms-5 text-white txt-shadow" }) </li>
        </ul>

        <ul class="navbar-nav ms-auto ms-lg-auto me-0 me-md-2 me-lg-5">
            @Html.ActionLink("LOG IN", "Login", "Home", new { @class = "btn btn-light ps-4 pe-4 fs-4 " })

        </ul>
    </div>
</nav>

<div class="container content">
    @using (Html.BeginForm("RegisterButton", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h3 class="text-center mb-4 fw-bolder">Create a new account</h3>
        <div class="mb-3 mt-4">
            <label for="Firstname" class="form-label">First Name</label>
            @Html.TextBoxFor(model => Model.FirstName, new { @class = "form-control w-50 mb-4", @id = "Firstname" , required = "required"  , type = "text" })
            <label for="Middlename" class="form-label">Middle Name</label>
             @Html.TextBoxFor(model => Model.MiddleName, new { @class = "form-control w-50 mb-4",  @id = "Middlename" , type = "text" })
            <label for="Lastname" class="form-label">Last Name</label>
            @Html.TextBoxFor(model => Model.LastName, new { @class = "form-control w-50 mb-4", @id = "Lastname" , required = "required" , type = "text" })
            <label for="Email" class="form-label">Email</label>
             @Html.TextBoxFor(model => Model.Email, new { @class = "form-control w-50 mb-4",  @id = "InputEmail" , required = "required" , type = "email"})
            <label for="Gsm" class="form-label">Gsm</label>
             @Html.TextBoxFor(model => Model.Gsm, new { @class = "form-control w-50 mb-4",  @id = "Gsm" , required = "required" , type = "text"})
            <label for="Password" class="form-label">Password</label>
            @Html.TextBoxFor(model => Model.Password, new { @class = "form-control w-50 mb-4",  @id = "Password" , required = "required" , type = "password"})
            
            <div id="emailHelp" class="form-text mb-3">We'll never share your personal information with anyone else.</div>
            <button type="submit" class="btn pt-3 pb-3 ps-5 pe-5 me-2" id="submitButton">Register</button>
        </div>
        
    }

</div>

</html>