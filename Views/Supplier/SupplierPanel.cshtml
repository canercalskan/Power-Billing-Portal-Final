
@model Power_Billing_Portal.Models.Bill 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supplier Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/3da5cff3a5.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
    <style>
        form {
            border:1px dashed black;
        }
    </style>
</head>



<body style="background-color:whitesmoke">
    <h1 class="text-center fs-1 mt-5 "><strong>SEND BILL TO CUSTOMERS</strong></h1>
    @using (Html.BeginForm("Success", "Supplier", FormMethod.Post, new { @class = "form-horizontal mt-5", role = "form" , target="_blank" }))
    {
        <label for="CompanyName" class="form-label">Enter Company Name</label>
        @Html.TextBoxFor(model => Model.CompanyName, new { @class = "form-control w-50 mb-4 borders", @id = "CompanyName", type = "text" , required = "required" })
        <label for="UserID" class="form-label">Enter Customer's ID</label>
        @Html.TextBoxFor(model => Model.UserID, new { @class = "form-control w-50 mb-4 borders", @id = "Firstname", required = "required", type = "text" })
        <label for="Price" class="form-label">Enter the price</label>
        @Html.TextBoxFor(model => Model.Price, new { @class = "form-control w-50 mb-4 borders", @id = "Price", type = "number" , required = "required" })
        <label for="LastDate" class="form-label">Enter Last Payment Date</label>
        @Html.TextBoxFor(model => Model.LastDate, new { @class = "form-control w-50 mb-4 borders", @id = "LastDate", type = "text" , required = "required" })
        <button type="submit" class="btn pt-3 pb-3 ps-5 pe-5 me-2" id="submitButton">Save Bill</button>
    }


</body>



</html>
